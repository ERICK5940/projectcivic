# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Secret Key - Change this in production!
SECRET_KEY=your-super-secret-key-change-in-production-12345

# Database Configuration
DATABASE_URL=sqlite:///civic_system.db

# For PostgreSQL: postgresql://user:password@localhost:5432/civic_db
# For MySQL: mysql://user:password@localhost/civic_db

# Server Configuration
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Email Configuration (for future use)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SMS Configuration (for future use)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-twilio-sid
SMS_AUTH_TOKEN=your-twilio-token
SMS_FROM_NUMBER=+1234567890

# File Upload
MAX_UPLOAD_SIZE_MB=16
UPLOAD_FOLDER=uploads

# Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
